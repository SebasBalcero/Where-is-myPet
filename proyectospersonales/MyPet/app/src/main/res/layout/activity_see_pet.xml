<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoc4"
    tools:context=".SeePet">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:text="ABOUT THE PET"
                android:textColor="#009688"
                android:textSize="35dp"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivPet"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerHorizontal="true"
                    android:maxWidth="200dp"
                    android:maxHeight="200dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivPet"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:backgroundTint="#FF5722"


                        android:onClick="imagen"
                        android:text="Change image" />

                </LinearLayout>

            </RelativeLayout>



            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_pets_24"
                android:drawablePadding="20dp"
                android:hint="Pet name"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <Spinner
                android:id="@+id/spKind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawablePadding="20dp"
                android:hint="Pet kind"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtRaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_clear_all_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Pet breed"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtDueÃ±o"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Pet owner"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtTel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_phone_iphone_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Phone 1"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtTel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_local_phone_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Phone 2"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:padding="20dp"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_import_contacts_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always"
                android:padding="20dp"
                android:scrollbarStyle="insideInset"
                android:scrollHorizontally="false"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/edtVacunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="#90ffffff"
                android:drawableLeft="@drawable/ic_baseline_healing_24"
                android:drawablePadding="20dp"
                android:ems="10"
                android:gravity="top"
                android:hint="Pet vaccines"
                android:inputType="textMultiLine"
                android:lines="6"
                android:overScrollMode="always"
                android:padding="20dp"
                android:scrollbarStyle="insideInset"
                android:scrollHorizontally="false"
                android:textColor="#009688"
                android:textColorHint="#009688"
                android:textSize="24dp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnGenerarIdentificadorQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FF5722"
                    android:onClick="informacion"
                    android:text="See QR" />

                <Button
                    android:id="@+id/btnSaveChanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FF5722"
                    android:onClick="changes"
                    android:text="Save Changes" />

                <Button
                    android:id="@+id/btnDeletePet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="#FF5722"
                    android:onClick="delete"
                    android:text="Delete Pet" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

